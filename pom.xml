<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>edu.yale.yins.lapsolver</name>
    <url>http://yins.yale.edu</url>

    <groupId>edu.yale.yins.lapsolver</groupId>
    <artifactId>LapSolver</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <repositories>
        <repository>
            <id>central</id>
            <name>Maven Central</name>
            <url>http://repo1.maven.org/maven2/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.8.2</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${project.artifactId}</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.1.1</version>
                <executions>
                    <execution>
                        <id>build-native</id>
                        <phase>generate-resources</phase>
                        <goals><goal>exec</goal></goals>

                        <configuration>
                            <executable>make</executable>
                            <workingDirectory>src/main/native</workingDirectory>
                            <arguments><argument>install</argument></arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>clean-native</id>
                        <phase>clean</phase>
                        <goals><goal>exec</goal></goals>

                        <configuration>
                            <executable>make</executable>
                            <workingDirectory>src/main/native</workingDirectory>
                            <arguments><argument>clean</argument></arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>build-python-bindings</id>
                        <phase>install</phase>
                        <goals><goal>java</goal></goals>

                        <configuration>
                            <mainClass>pybinding.BindingGenerator</mainClass>
                            <arguments>
                                <argument>target/LapSolver.jar</argument>
                                <argument>lapsolver</argument>
                                <argument>python</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>